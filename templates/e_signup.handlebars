<div id="e-signup">

  <div class="error" id = "e-signup-error"></div>

  <form id="e-signup-form" class="form-horizontal">
    <div class="form-group">
      <label class="control-label col-xs-4">Email:</label>
      <div class="col-xs-8">
        <input class="form-control" type="email" name="email" required placeholder="Email"/>
      </div>
    </div>

    <div class = "form-group">
      <label class="control-label col-xs-4">Company:</label>
      <div class="col-xs-8">
        <input class="form-control" type="text" name="company" required placeholder="Company"/>
      </div>
    </div>
    
    <div class = "form-group">
      <label class="control-label col-xs-4">Password:</label>
      <div class="col-xs-8">
        <input class="form-control" type="password" name="password" required placeholder="Password"/>
      </div>
    </div>
    
    <div class = "form-group">
      <label class="control-label col-xs-4">Confirm Password:</label>
      <div class="col-xs-8">
        <input class="form-control" type="password" name="confirm" required placeholder="Password"/>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-xs-offset-4 col-xs-6">
        <input class="btn btn-primary" type="submit" />
      </div>
    </div> 
  
  </form>
</div>
